{
  "cli": {
    "version": ">= 10.2.1",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "android": {
        "buildType": "app-bundle"
      }
    },
    "production-apk": {
      "android": {
        "buildType": "apk"
      }
    },
    "simulator": {
      "ios": {
        "developmentClient": true,
        "simulator": true,
        "distribution": "internal"
      }
    },
    "testflight": {
      "ios": {
        "distribution": "internal"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
